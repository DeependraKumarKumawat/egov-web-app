def build(path, ci_image) {
    stage("Build") {
        docker.image("egovio/ci-react:v8.4.0-lerna-v2").inside {
            sh "cd ${path}/rainmaker && yarn config set registry http://egov-micro-dev.egovernments.org/verdaccio && yarn && yarn run build-css-citizen && cd packages/citizen && yarn run build && cp -r build ../../../citizen/";
        }
    }
}

return this;
